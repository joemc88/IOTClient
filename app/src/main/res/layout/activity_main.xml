<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mcevoy.joe.iotclient.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Macros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/macroHeading"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/macroHeading"

                android:layout_alignParentStart="true"
                android:id="@+id/macroSpace"/>

            <Button
                android:text="+"
                android:id="@+id/addMacro"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_below="@+id/macroSpace"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_height="40dp" />

            <TextView
                android:text="Visible Services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/visibleServicesHeading"
                android:layout_below="@+id/addMacro"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/visibleServicesSpace"
                android:layout_height="wrap_content"
                android:layout_below="@+id/visibleServicesHeading"
                android:layout_margin="-8dp"/>

            <TextView
                android:text="Predicted Services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/predictedServicesHeading"
                android:layout_below="@+id/visibleServicesSpace"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/predictedServicesHeading"
                android:id="@+id/predictionSpace" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:id="@+id/time" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>

